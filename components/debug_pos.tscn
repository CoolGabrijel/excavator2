[sub_resource type="GDScript" id="GDScript_a7ct8"]
resource_name = "debug_pos"
script/source = "extends Control

@export var player: Player

@onready var label: Label = $Label

func _process(_delta: float) -> void:
	label.text = \"Position: \"
	label.text += str(\"%10.2f\" % player.position.x)
	label.text += \", \"
	label.text += str(\"%10.2f\" % player.position.y)
	label.text += \"\\n\"
	label.text += \"Grid: \" + str(player.current_grid_position) + \"\\n\"

func _unhandled_key_input(event: InputEvent) -> void:
	var key_event = event as InputEventKey
	if key_event and key_event.is_action_pressed(\"DebugInfo\"):
		visible = !visible
"

